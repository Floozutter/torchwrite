{
    "compilerOptions": {
        "target": "ES2015",
        "baseUrl": "src/",
        "module": "ES2015",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
